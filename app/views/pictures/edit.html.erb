<h1>Edit image</h1>

<%= form_for @picture do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 <p>
   <%= f.label :place %><br>
   <%= f.text_field :place %>
</p>
  <p>
    <%= f.submit %>
  </p>

<% end %>


 
<%= link_to 'Back', pictures_path %>
